<div class="row">
	<div class="col-lg-4">
            <div class="hpanel">
                <div class="panel-body list">

                    <div class="stats-icon pull-right">
                        <i class="pe-7s-science fa-4x"></i>
                    </div>
                    <div class="panel-title">Percent Change In Price</div>
                    <div class="list-item-container">
                        <div class="list-item">
                            <h3 class="no-margins font-extra-bold text-success">73%</h3>
                            <small>SINCE SINCE LAUNCH</small>
                            <div class="pull-right font-bold">98% <i class="fa fa-level-up text-success"></i></div>
                        </div>
                        <div class="list-item">
                            <h3 class="no-margins font-extra-bold text-color3">22%</h3>
                            <small>SINCE LAST 30 DAYS</small>
                            <div class="pull-right font-bold">13% <i class="fa fa-level-down text-color3"></i></div>
                        </div>
                        <div class="list-item">
                            <h3 class="no-margins font-extra-bold text-color3">Rs.9,180</h3>
                            <small>MRP</small>
                            <div class="pull-right font-bold">22% <i class="fa fa-bolt text-color3"></i></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="hpanel">
                <div class="panel-body">
                    <div>
                        <canvas id="lineOptions" height="140"></canvas>
			<div class="pull-left">
                        	<a href="#" class="btn btn-sm btn-default">1 Month</a>
                        	<a href="#" class="btn btn-sm btn-default">3 Month</a>
				<a href="#" class="btn btn-sm btn-primary">6 Month</a>
				<a href="#" class="btn btn-sm btn-default">Year</a>
				<a href="#" class="btn btn-sm btn-default">Till Date</a>
                    	</div>		
                    </div>
                </div>
            </div>
        </div>      
    </div>
   <script type="text/javascript">
   	var myNewChart;
	var lineData ;
	var lineOptions;
        $(function () {

            /**
             * Options for Line chart
             */
             lineData = {
                labels: ["January", "February", "March", "April", "May", "June", "July"],
                datasets: [
                    {
                        label: "Example dataset",
                        fillColor: "rgba(0,0,0,0)",
                        strokeColor: "rgba(98,203,49,0.7)",
                        pointColor: "rgba(98,203,49,1)",
                        pointStrokeColor: "#fff",
                        pointHighlightFill: "#fff",
                        pointHighlightStroke: "rgba(26,179,148,1)",
                        data: [7016, 8032, 7718, 5726, 9242, 6733, 5744]
                    }
                ]
            };

             lineOptions = {
                scaleShowGridLines: true,
                scaleGridLineColor: "rgba(0,0,0,.05)",
                scaleGridLineWidth: 1,
		scaleLabel: "Rs.<%=value%>",
                bezierCurve: true,
                bezierCurveTension: 0.4,
                pointDot: true,
                pointDotRadius: 4,
                pointDotStrokeWidth: 1,
                pointHitDetectionRadius: 20,
                datasetStroke: true,
                datasetStrokeWidth: 1,
                datasetFill: true,
                responsive: true
            };

	jQuery(".nav-tabs a").on("shown.bs.tab", function() {
	   var tabText = $(event.target).text();
		if(tabText=='Price Trend')
		{
			var ctx = document.getElementById("lineOptions").getContext("2d");
			myNewChart = new Chart(ctx).Line(lineData, lineOptions);
		}
	
	    });
		
	
			

        })

    </script>
